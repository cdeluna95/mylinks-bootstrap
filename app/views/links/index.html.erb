<% provide(:title, "YouTube Link Sharer") %>
<p id="notice"><%= notice %></p>

<div class="center jumbotron">
  <h1>YouTube Link Sharer</h1><br>
  
<table>
  <thead>
    <tr>
      <td><strong>Link</strong></td>
      <td><strong>Author</strong></td>
      <td><strong>Comment</strong></td>
    </tr>
  </thead>

  <tbody>
    <% @links.each do |link| %>
      <tr>
        <td><%= link.link %></td>
        <td><%= link.author %></td>
        <td><%= link.comment %></td>
        <td><%= link_to 'Show', link %></td>
        <%#= link_to 'Edit', edit_link_path(link) %>
        <%#= link_to 'Destroy', link, method: :delete, data: { confirm: 'Are you sure?' } %>
        <td><%= link_to 'Comment',
        { :controller => "comments", :action => "new", :link_id => link.id } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%#= link_to 'New Link', new_link_path %>
