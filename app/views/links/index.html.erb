<% provide(:title, "Share your videos!") %>
<p id="notice"><%= notice %></p>

<div class="center jumbotron">
  <h1>YouTube Link Sharer</h1>
  
  <h2>
    Share your videos! Comment on them!
    Check out the Sinatra version <a href="http://cdelunamylinks-bootstrap.herokuapp.com"/>here!</a>
  </h2>
  
  <%= link_to 'New Link', new_link_path , class: "btn btn-lg btn-primary" %>
  <hr/>
  
  <table border="2">
    <thead>
      <tr>
        <td><strong>Link</strong></td>
        <td><strong>Author</strong></td>
        <td><strong>Comment</strong></td>
        <td><strong>Show</strong></td>
        <td><strong>Edit</strong></td>
        <td><strong>Delete</strong></td>
        <td><strong>Comment</strong></td>
      </tr>
    </thead>

    <tbody>
      <% @links.each do |link| %>
        <tr>
          <td><%= link.link %></td>
          <td><%= link.author %></td>
          <td><%= link.comment %></td>
          <td><%= link_to 'Show', link %></td>
          <td><%= link_to 'Edit', edit_link_path(link) %></td>
          <td><%= link_to 'Delete', link, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <td><%= link_to 'Comment',
          { :controller => "comments", :action => "new", :link_id => link.id } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="center">
  <%= link_to image_tag("youtube-logo.png", alt: "YouTube"), 'http://youtube.com/' , :class => "youtube-logo" %>
</div>

